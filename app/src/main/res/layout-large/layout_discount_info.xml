<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/discount_window_bg"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top_bar_color"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:src="@drawable/cross"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/Grey"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
            ></View>
    </RelativeLayout>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_below="@+id/layout_top"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_profilee"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
      />
    <TextView
        android:id="@+id/tv_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="10dp"
        android:text="32, China Street, USA"
        android:textSize="12sp"
        />
    <View
        android:id="@+id/view_below_loc"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/tv_location"
        android:background="@color/Grey"
        ></View>
   <LinearLayout
       android:id="@+id/layout_bottom"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_alignParentBottom="true"
       android:layout_margin="10dp"
       android:weightSum="1"
       >
       <Button
           android:id="@+id/btn_directions"
           android:layout_width="0dp"
           android:layout_height="50dp"
           android:layout_weight="0.5"
           android:background="@drawable/ic_dir"
           android:layout_marginRight="5dp"
           android:text="Directions"
           android:textColor="@color/White"
           />
       <Button
           android:id="@+id/btn_fav"
           android:layout_width="0dp"
           android:layout_height="50dp"
           android:layout_weight="0.5"
           android:layout_marginLeft="5dp"
           android:background="@drawable/ic_fav"
           android:text="Favourite"
           android:textColor="@color/White"
           />
   </LinearLayout>
    <ListView
        android:id="@+id/lv_discountinfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view_below_loc"
        android:layout_above="@+id/layout_bottom"
        ></ListView>
</RelativeLayout>