        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView android:id="@+id/current_discount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Current Discount"
                android:textColor="#ffffff"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:layout_marginTop="10dp"
                android:textSize="22sp"
                android:gravity="center|left"
                android:background="@drawable/ic_button_back"/>

            <TextView android:id="@+id/future_discount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Future Discount"
                android:textColor="#ffffff"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:textSize="22sp"
                android:gravity="center|left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:background="@drawable/ic_button_back"/>

            <TextView android:id="@+id/past_discount"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:text="Past Discount"
                android:textColor="#ffffff"
                android:textSize="22sp"
                android:gravity="center|left"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="40dp"
                android:background="@drawable/ic_button_back" />

