<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >
    <ImageView
        android:id="@+id/iv_category_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_jewellery"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >
                <TextView
                    android:id="@+id/tv_per"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="top"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/line_color"
                    />
                <ImageView
                    android:id="@+id/iv_flags"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_multiple"
                    />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/layout_percentage"
                android:layout_marginRight="10dp"
                android:textColor="@color/dialog_spots"
                android:textSize="14sp"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/tv_categoryname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/line_color"
            />
        <TextView
            android:id="@+id/tv_duration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/tv_loc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/line_color"
            android:textSize="13sp"
            />
    </LinearLayout>
</LinearLayout>